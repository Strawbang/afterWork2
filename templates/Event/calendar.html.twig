{% extends 'base.html.twig' %}

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/Oreo/plugins/bootstrap/css/bootstrap.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset('assets/Oreo/plugins/jvectormap/jquery-jvectormap-2.0.3.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset('assets/Oreo/plugins/morrisjs/morris.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset('assets/Oreo/css/main.css') }}"/>
        <link rel="stylesheet" href="{{ asset('assets/Oreo/css/color_skins.css') }}"/>
        <link rel="stylesheet" href="{{ asset('assets/Oreo/plugins/fullcalendar/fullcalendar.min.css') }}"/>
    {% endblock %}


{% block content %}


<section class="content page-calendar">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Calendar
                    <small>Welcome to Oreo</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Oreo</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">App</a></li>
                    <li class="breadcrumb-item active">Calendar</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="row">
                <div class="col-md-12 col-lg-4 col-xl-4">
                    <div class="body">
                        <a  href="{{ path('event_add', {'groupe': idgroupe}) }}" > <button class="btn btn-round btn-info" >Ajouter un Ã©venement</button></a>
                        {#<button class="btn btn-default hidden-lg-up m-t-0 float-right" data-toggle="collapse" data-target="#open-events" aria-expanded="false" aria-controls="collapseExample"><i class="zmdi zmdi-chevron-down"></i></button>#}
                        <div class="collapse-xs collapse-sm collapse" id="open-events">
                            <hr>

                            {% for events in event %}
                                <div class="event-name b-primary row">

                                    <div class="col-2 text-center">

                                        <a href="">

                                            {{ events.datedebut|date("F jS") }}
                                        </a>

                                        {#<h4>11<span>Dec</span><span>2017</span></h4>#}
                                    </div>
                                    <div class="col-10">
                                        <h6>{{ events.titre }}</h6>
                                        <p>{{ events.message|slice(1, 20) }}...</p>
                                        <address><i class="zmdi zmdi-pin"></i>{{ events.adress }}</address>
                                    </div>
                                </div>

                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-8 col-xl-8">
                    <div class="body">
                        <button class="btn btn-primary btn-round waves-effect" id="change-view-today">Aujourd'hui</button>
                        <button class="btn btn-default btn-simple btn-round waves-effect" id="change-view-day" >Jour</button>
                        <button class="btn btn-default btn-simple btn-round waves-effect" id="change-view-week">Semaine</button>
                        <button class="btn btn-default btn-simple btn-round waves-effect" id="change-view-month">Mois</button>
                        <div id="calendar" class="m-t-20"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}

{% block js %}

    <script type="text/javascript">

        var urlCalendar = '{{ path('event_calendar_loader')}}';

    </script>



    <script src="{{ asset('assets/Oreo/bundles/libscripts.bundle.js') }}"></script>
    <script src="{{ asset('assets/Oreo/bundles/vendorscripts.bundle.js') }}"></script>
    <script src="{{ asset('assets/Oreo/bundles/fullcalendarscripts.bundle.js') }}"></script>
    <script src="{{ asset('assets/Oreo/bundles/mainscripts.bundle.js') }}"></script>
    <script src="{{ asset('assets/Oreo/js/pages/calendar/calendar.js') }}"></script>

{% endblock %}
