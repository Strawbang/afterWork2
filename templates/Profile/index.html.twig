{% extends 'base.html.twig' %}



{% block content %}
    <section class="content blog-page">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>Mon profil
                    </h2>
                </div>
                <div class="col-lg-5 col-md-6 col-sm-12">
                    <ul class="breadcrumb float-md-right">
                        <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i>Profil</a></li>
                        <li class="breadcrumb-item active"><a href="blog-dashboard.html">Profil</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 col-md-12">
<div class="card profile-header">
                    <div class="body">
                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-12">
                                <div class="profile-image"> <img src="{{ asset('assets/Oreo/images/profile_av.jpg') }}" alt=""> </div>
                            </div>
                            <div class="col-lg-8 col-md-8 col-12">
                                <div class="pl-2">
                                <h4 class="m-t-0 m-b-0">{{ User.username }}</h4>
                                <p>email: {{ User.email }} </p>
                                <p><strong>Entreprise: </strong> Nom de l'entreprise</p>
                                </div>

                                <div>
                                    <button class="btn btn-primary btn-round " data-toggle="modal" data-target="#UserInfoModal">Modifier mes informations personnelles</button>
                                    <br />
                                    <a><button class="btn btn-primary btn-round btn-simple">Mes entreprises</button></a>
                                    <a><button class="btn btn-primary btn-round btn-simple">Mes groupes</button></a>
                                    <a><button class="btn btn-primary btn-round btn-simple">Rechercher des enevements</button></a>
                                </div>
                            </div>   



                        </div>
                    </div>                    
                </div>
     
                </div>
                <div class="col-lg-4 col-md-12 right-box">
                    <div class="card">
                      
                    </div>
                    <div class="card">
                        <div class="header">
                            <h2><strong>Evenements à venir</strong></h2>
                            {{ tabEvent[0]['titre'] }} <br />
                            {{ tabEvent[0]['message'] }} <br />
                            {{ tabEvent[0]['adress']}} <br />
                           début:  {{ tabEvent[0]['datedebut']|date('d-m-Y') }} <br />
                           fin:  {{ tabEvent[0]['datefin']|date('d-m-Y') }} <br />
                           <a href="/event/detail/1"><button class="btn btn-primary btn-round">voir</button></a>

                        </div>
                    </div>
                
                  
                
                </div>
            </div>
        </div>
    </section>


    <div class="modal fade" id="UserInfoModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="title" id="defaultModalLabel">Modifier mes informations personnelles</h4>
            </div>
            <div class="modal-body">
                    {# form(formAddGroupe) #}
                    {# form(formUser) #}
                                {{ form_start(formUser) }}
                                {{ form_errors(formUser) }}
                                  <div class="col-sm-6">
                                        <div class="form-group">
                                            {{ form_row(formUser.username)}}
                                        </div>
                                    </div>
                                   <div class="col-sm-6">
                                        <div class="form-group">
                                         {{ form_row(formUser.email) }}
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                     {{ form_row(formUser.submit) }}
                                     </div>
                                
                                {{ form_end(formUser) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-round waves-effect ml-3" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}